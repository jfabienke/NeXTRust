# local.env.template - Template for local development environment
# Copy this file to local.env and fill in your actual values
# DO NOT COMMIT local.env - it should be in .gitignore

# Gemini API Configuration
export GEMINI_API_KEY="your-gemini-api-key-here"
export GEMINI_PROJECT_ID="your-project-id"

# OpenAI/O3 Configuration  
export OPENAI_API_KEY="sk-your-openai-key-here"
export O3_ENDPOINT="https://api.openai.com/v1/chat/completions"
export O3_API_KEY="sk-your-o3-key-if-different"

# GitHub Configuration
export GH_PR_TOKEN="ghp_your-github-pat-with-pr-write"

# Metrics Configuration (optional)
export STATSD_HOST="localhost"
export STATSD_PORT="8125"

# Slack Notifications (optional)
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Budget Configuration
export AI_BUDGET_LIMIT="100.00"
export AI_BUDGET_WARNING_THRESHOLD="0.8"

# CI Configuration
export CI_TEST_MODE="false"
export NEXTSTEP_PIPELINE_PHASE="development"

# Usage:
# 1. Copy this file: cp ci/local.env.template local.env
# 2. Edit local.env with your actual API keys
# 3. Source it: source local.env
# 4. Run tests: ./ci/scripts/test-all.sh